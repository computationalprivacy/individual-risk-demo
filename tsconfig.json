{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es2017", "es7", "es6", "dom"],
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    ".cache",
    "acceptance-tests",
    "build",
    "dist",
    "jest",
    "node_modules",
    "public",
    "scripts",
    "src/setupTests.ts",
    "webpack"
  ]
}
